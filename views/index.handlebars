<h1>Eat Da Burger</h1>

<img src="../public/assets/img/burger.png">

<div class="row">
    <div class="col-6" id="nonDevoured">
        <h2>Non-Devoured Burgers</h2>
        <ul>
            {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=false}} {{/unless}} {{/each}}
        </ul>
    </div>
    <div class="col-6" id="devoured">
        <h2>Devoured Burgers</h2>
        <ul>
            {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=true}} {{/if}} {{/each}}

        </ul>
    </div>
</div>

<h2>Create a Burger</h2>
<form class="creationForm">
    <div class="form-group">
        <label for="burg">Burger Name:</label>
        <input type="text" id="burg" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>